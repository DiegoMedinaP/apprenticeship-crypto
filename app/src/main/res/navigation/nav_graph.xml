<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.apprenticeship.ui.fragments.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main" >
        <action
            android:id="@+id/action_mainFragment_to_currencyDetailFragment"
            app:destination="@id/currencyDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/currencyDetailFragment"
        android:name="com.example.apprenticeship.ui.fragments.CurrencyDetailFragment"
        android:label="fragment_currency_detail"
        tools:layout="@layout/fragment_currency_detail" >

        <argument
            android:name="currency"
            app:argType="com.example.apprenticeship.domain.Currency" />
    </fragment>
</navigation>